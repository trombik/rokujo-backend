<%= form_with url: search_path, method: :get, local: true do |f| %>
  <%= tag.div class: "col-auto" do %>
    <%= tag.div class: "input-group" do %>
      <%= tag.span class: "input-group-text" do %>
        正規表現全文検索
      <% end %>
      <%= f.text_field :word, value: params[:word], class: "form-control", placeholder: "正規表現" %>
      <%= f.submit "検索", name: nil, class: "btn btn-primary" %>
    <% end %>
  <% end %>
<% end %>
