               type: "button",
               data: { bs_toggle: "offcanvas", bs_target: "#" + SideMenu::RightComponent.id } do %>
  <%= render IconComponent.new("gear-wide-connected", klass: "text-secondary") %>
  <%= tag.span class: "fw-semibold small", style: "letter-spacing: 0.05rem;" do %>
    SYSTEM
  <% end %>
  <%= tag.span class: "badge rounded-circle bg-success p-1", style: "width: 6px; height: 6px;" do %>
    <%= tag.span class: "visually-hidden" do %>
      Active
    <% end %>
  <% end %>
<% end %>
